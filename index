    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script>
        // --- CONFIGURAZIONE ---
        // INSERISCI QUI SOTTO IL TUO URL DI GOOGLE APPS SCRIPT
        const GOOGLE_SCRIPT_URL = "https://script.google.com/macros/s/AKfycbxUnIBy_4bhDxE2K7Yo0xWRohSHGSp15mKmEN5cqpsFDdQpRxLlwMsGTxECaDa68Gg/exec";
        
        // Inizializza Calendario
        const checkInPicker = flatpickr("#checkIn", {
            minDate: "today",
            dateFormat: "d/m/Y",
            onChange: function(selectedDates, dateStr, instance) {
                checkOutPicker.set('minDate', dateStr);
                // Apre automaticamente il checkout dopo aver scelto il checkin
                setTimeout(() => checkOutPicker.open(), 100);
            }
        });

        const checkOutPicker = flatpickr("#checkOut", {
            minDate: "today",
            dateFormat: "d/m/Y"
        });

        // Gestione Invio Form
        document.getElementById('bookingForm').addEventListener('submit', function(e) {
            e.preventDefault();

            const btn = document.getElementById('submitBtn');
            const msg = document.getElementById('statusMessage');
            
            // UI Loading
            btn.disabled = true;
            btn.innerText = "Invio in corso...";
            msg.style.display = 'none';

            // Raccogli dati
            const formData = {
                checkIn: document.getElementById('checkIn').value,
                checkOut: document.getElementById('checkOut').value,
                adults: document.getElementById('adults').value,
                children: document.getElementById('children').value,
                totalGuests: parseInt(document.getElementById('adults').value) + parseInt(document.getElementById('children').value),
                guestName: document.getElementById('guestName').value,
                guestEmail: document.getElementById('guestEmail').value,
                guestPhone: document.getElementById('guestPhone').value,
                pets: document.getElementById('pets').value,
                specialRequests: document.getElementById('specialRequests').value,
                nights: calculateNights(document.getElementById('checkIn').value, document.getElementById('checkOut').value)
            };

            // Invio a Google Script (usando no-cors o text/plain per evitare errori CORS complessi)
            fetch(GOOGLE_SCRIPT_URL, {
                method: 'POST',
                body: JSON.stringify(formData)
            })
            .then(response => {
                // Con Apps Script + fetch, spesso la risposta è opaca, ma se arriva qui è "andata"
                showSuccess();
            })
            .catch(error => {
                console.error('Error:', error);
                // Fallback: a volte fetch fallisce ma i dati arrivano. 
                // Ma proviamo a mostrare errore.
                showError();
            });
        });

        function calculateNights(start, end) {
            if(!start || !end) return 0;
            const d1 = parseDate(start);
            const d2 = parseDate(end);
            return Math.max(0, (d2 - d1) / (1000 * 60 * 60 * 24));
        }

        function parseDate(str) {
            const parts = str.split("/");
            return new Date(parts[2], parts[1] - 1, parts[0]);
        }

        function showSuccess() {
            const msg = document.getElementById('statusMessage');
            const btn = document.getElementById('submitBtn');
            const form = document.getElementById('bookingForm');
            
            msg.innerText = "Grazie! La tua richiesta è stata inviata. Ti risponderemo presto.";
            msg.className = "success";
            msg.style.display = "block";
            
            btn.innerText = "Inviato";
            form.reset();
            
            // Opzionale: Nascondi form
            // form.style.display = "none";
        }

        function showError() {
            const msg = document.getElementById('statusMessage');
            const btn = document.getElementById('submitBtn');
            
            msg.innerText = "Si è verificato un errore. Per favore scrivici via email o riprova.";
            msg.className = "error";
            msg.style.display = "block";
            
            btn.disabled = false;
            btn.innerText = "Riprova";
        }
    </script>
